{
  "compilerOptions": {
    "target": "es2020", 
    "module": "es2020", 
    "rootDir": "./src", 
    "outDir": "./public/dist", 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "strict": true, 
    "skipLibCheck": true,
    "lib": ["ESNext", "DOM"] 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
